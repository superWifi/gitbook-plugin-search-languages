{
  "name": "gitbook-plugin-search-languages",
  "description": "this plugin will replace keyword search in gitbook to your language.",
  "main": "index.js",
  "version": "0.1.1",
  "engines": {
    "gitbook": ">=3.*.*"
  },
  "homepage": "https://github.com/superwifi/gitbook-plugin-search-languages#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/superwifi/gitbook-plugin-search-languages.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/superwifi/gitbook-plugin-search-languages/issues"
  },
  "dependencies": {
    "gitbook-plugin-lunr": "1.2.0",
    "lunr": "0.5.12",
    "lunr-languages": "superwifi/lunr-languages"
  },
  "devDependencies": {
    "uglify-js": "2.7.5"
  },
  "scripts": {
    "prepublish": "rm -f assets/* && cp node_modules/gitbook-plugin-lunr/assets/lunr.min.js ./assets && uglifyjs -c -o ./assets/lunr-languages.min.js ./node_modules/lunr-languages/lunr.stemmer.support.js ./node_modules/lunr-languages/tinyseg.js ./node_modules/lunr-languages/lunr.??.js && cp node_modules/gitbook-plugin-lunr/assets/search-lunr.js ./assets"
  },
  "gitbook": {
    "properties": {
      "maxIndexSize": {
        "type": "number",
        "title": "Limit size for the index",
        "default": 1000000
      },
      "ignoreSpecialCharacters": {
        "type": "boolean",
        "title": "Ignore special characters in words",
        "default": false
      },
      "lang": {
        "type": "string",
        "title": "lang code",
        "default": "jp"
      }
    }
  },
  "keywords": [
    "gitbook",
    "plugin"
  ],
  "author": {
    "name": "yoshidax",
    "url": "http://github.com/yoshidax"
  }
}
